{
    "name": "ikr/money-math",
    "type": "library",
    "description": "gmp-based arbitrary precision operations on currency amounts \"XXX.YY\"; because floats are BAD for representing money",

    "keywords": [
        "money",
        "gmp",
        "currency",
        "bigint",
        "bignum",
        "arithmetic",
        "arbitrary",
        "precision",
        "format"
    ],

    "homepage": "https://github.com/ikr/money-math-php",
    "license": "MIT",

    "authors": [
        {
            "name": "Ivan Krechetov",
            "email": "ivan.krechetov@gmail.com"
        }
    ],

    "autoload": {
        "psr-0": {
            "MoneyMath": "src/"
        }
    },

    "minimum-stability": "dev",

    "require": {
        "php": ">=5.4.0",
        "ext-gmp": "*"
    },

    "require-dev": {
        "ext-mbstring": "*",
        "phpunit/phpunit": "3.7.*"
    }
}
